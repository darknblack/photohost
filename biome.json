{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double"
		}
	},
	"files": {
		"ignore": [
			".sst",
			".turbo",
			".vscode",
			"node_modules",
			".next",
			"build",
			"dist",
			".open-next",
			"stacks/functions"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 160,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useSelfClosingElements": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedImports": "error"
			},
			"complexity": {
				"noStaticOnlyClass": "off",
				"noBannedTypes": "off"
			},
			"suspicious": {
				"noAsyncPromiseExecutor": "off",
				"noConfusingVoidType": "off",
				"noExplicitAny": "off"
			},
			"a11y": {
				"useButtonType": "off"
			}
		}
	},

	"organizeImports": {
		"enabled": true
	}
}
